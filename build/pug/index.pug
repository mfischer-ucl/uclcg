// Modals
// Page Reload
#reloadConfirm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4#myModalLabel.modal-title Return to index?
            .modal-body.alert.alert-danger
                strong Leaving this page will erase any unsaved progress. Continue?
            .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Close
                button#confirmPageReload.btn.btn-primary(type='button') Leave
// Help
#helpPage.modal.fade(role='dialog', aria-labelledby='myModalLabel')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4#myModalLabel.modal-title Useful Shortcuts
            .modal-body
                .alert.alert-success
                    ul
                        li
                            b Ctrl-F / Cmd-F:
                            |  Search
                        li
                            b Alt-G:
                            |  Jump to a specific line
                        li
                            b Ctrl-Q:
                            |  Collapse current segment
                p Happy Coding!
            .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Close
// Login
#loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4#myModalLabel.modal-title Login
            form(action='/login', method='POST')
                #loginModalFormDiv.modal-body.alert.alert-info
                    p Please login to access this page:
                    .form-group
                        label.control-label(for='loginUser') Your username:
                        input#loginUser.form-control(name='username', type='username')
                    .form-group
                        label.control-label(for='loginPassword') Your password:
                        input#loginPassword.form-control(name='password', type='password')
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button#submitLogin.btn.btn-primary(type='submit') Submit
