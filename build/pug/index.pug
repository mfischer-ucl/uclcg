// Navigation
nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    // Brand and toggle get grouped for better mobile display
    .navbar-header
        a#mainTitle.navbar-brand(href='/') UCL Computer Graphics
    // Top Menu Items
    ul.nav.navbar-right.top-nav
        li
            a#menuHelp.cursor-pointer
                i.fa.fa-fw.fa-question-circle
                |  Help
        li
            a#menuLogin.cursor-pointer
                i.fa.fa-fw.fa-user
                |  Login
        li
            a#reloadSamePage.cursor-pointer(href='/')
                i.fa.fa-fw.fa-file
                |  Back to index
        li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-align-justify
                b.caret
            ul.dropdown-menu
                li
                    a#menuLoad(href='#')
                        i.fa.fa-fw.fa-upload
                        |  Load Setup
                li
                    a#menuSave(href='#')
                        i.fa.fa-fw.fa-download
                        |  Save Setup
#page-wrapper
    .container-fluid
        .row
            .col-md-12
                #setupIntro
                    p
                        | Please
                        strong  don&apos;t forget to save your work to disk
                        |  every now and then!
                        strong
                            | To
                            | update the render view
                        | , click the
                        strong  refresh button
                        |  or hit
                        strong  ctrl-s/cmd-s
                        | .
                        | If that has no effect, you have probably made an error somewhere! Happy coding!
                    #setupTabs.col-md-12
                        // We load extra stuff here
                        ul#setupTabsUL
                // setupIntro div
        .row
            div
                div(style='display: none;')
                    input#loadExperimentInput(type='file')
            #viewerControls.col-xs-12
                // buttons
                span(style='display: inline-block')
                    a#refreshButton.btn.btn-info(href='#')
                        i.fa.fa-refresh(title='Refresh')
                    a#toFirstFrameButton.btn.btn-default(href='#')
                        i.fa.fa-fast-backward(title='Backward')
                    a#frameBackwardButton.btn.btn-default(href='#')
                        i.fa.fa-step-backward(title='Frame Backward')
                    a#stopButton.btn.btn-default(href='#')
                        i.fa.fa-stop(title='Stop')
                    a#playButton.btn.btn-default(href='#')
                        i.fa.fa-play(title='Play')
                    a#frameForwardButton.btn.btn-default(href='#')
                        i.fa.fa-step-forward(title='Frame Forward')
                    a#toLastFrameButton.btn.btn-default(href='#')
                        i.fa.fa-fast-forward(title='Forward')
                // frame controls
                span(style='display: inline-block')
                    input#currentFrameInput.form-control(type='text', style='width: 75px; display: inline;')
                    input#maxFramesInput.form-control(type='text', style='width: 75px; display: inline;')
                // resolution controls
                span(style='display: inline-block')
                    a#decreaseResolutionButton.btn.btn-default(href='#')
                        i.fa.fa-compress(title='Decrease Resolution')
                    a#increaseResolutionButton.btn.btn-default(href='#')
                        i.fa.fa-expand(title='Increase Resolution')
                    input#currentResolution.form-control(type='text', value='800x400', style='width: 125px; display: inline;', disabled='')
            // view controls
        #viewerRow.row
            #mainCol.col-sm-12.col-md-10.col-lg-8
                // Actual render target
                #renderTarget
                    canvas#glRenderTarget(width='800', height='400', style='display: none;')
                // viewport display
                #viewer
                    canvas#glViewport(width='800', height='400', style='width:100%')
            // mainCol
        // viewer  row
        #tabSpace.row
            #mainCol.col-md-12
                // EMPTY TABS
                #implementationTabs.codeTab
                    ul#implementationTabsUL
    // /.container-fluid
// /#page-wrapper
